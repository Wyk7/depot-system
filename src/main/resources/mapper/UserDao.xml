<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.depot.ex.dao.UserDao">
<cache eviction="LRU" type="com.depot.ex.utils.RedisCache"/>
	<insert id="save" parameterType="com.depot.ex.entity.User">
		<!-- 将MySQL的自增主键(即刚刚插入数据时生成的ID)返回 -->
		<!-- <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
			SELECT LAST_INSERT_ID();
		</selectKey> -->
		INSERT INTO user(username,name,password,sex,tel,role) value(#{username},#{name},#{password},#{sex},#{tel},#{role})
	</insert>
	<select id="findUserById" resultType="User" parameterType="int">
		SELECT * FROM user where id=#{id}
	</select>
	<select id="findUserByUserName" resultType="User" parameterType="String">
		SELECT * FROM user where username=#{username}
	</select>
</mapper>